#!/bin/sh

set -e

if [ "$1" = "upgrade" ] || [ "$1" = "install" ]; then
	dpkg-divert --package plymouth-theme-vanilla-logo --add --rename \
	--divert "/usr/share/plymouth/ubuntu-logo.png.vanilla" "/usr/share/plymouth/ubuntu-logo.png"

	ln -s /usr/share/plymouth/vanilla-logo.png \
	"/usr/share/plymouth/ubuntu-logo.png"
fi

